<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yf.exam.modules.qu.mapper.QuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yf.exam.modules.qu.entity.Qu">
        <id column="id" property="id" />
        <result column="qu_type" property="quType" />
        <result column="level" property="level" />
        <result column="image" property="image" />
        <result column="content" property="content" />
        <result column="question_stem" property="questionStem" />
        <result column="knowledge_points" property="knowledgePoints" />
        <result column="extraction_status" property="extractionStatus" />
        <result column="subject" property="subject" />
        <result column="grade" property="grade" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
        <result column="analysis" property="analysis" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        `id`,`qu_type`,`level`,`image`,`content`,`question_stem`,`knowledge_points`,`extraction_status`,`subject`,`grade`,`create_time`,`update_time`,`remark`,`analysis`
    </sql>


    <!-- 随机取数据 -->
    <select id="listByRandom" resultMap="BaseResultMap">
        SELECT a.*
        FROM el_qu a
        LEFT JOIN el_qu_repo b ON a.id=b.qu_id
        WHERE b.repo_id=#{repoId} AND a.qu_type=#{quType}
        <if test="excludes!=null">
            AND a.id NOT IN
            <foreach item="item" collection="excludes" separator="," open="(" close=")" index="">'${item}'</foreach>
        </if>
        ORDER BY RAND()
        LIMIT ${size}
    </select>

    <!-- 获取指定题库和题型的所有题目（用于AI智能选择） -->
    <select id="listByType" resultMap="BaseResultMap">
        SELECT a.*
        FROM el_qu a
        LEFT JOIN el_qu_repo b ON a.id=b.qu_id
        WHERE b.repo_id=#{repoId} AND a.qu_type=#{quType}
        <if test="excludes!=null">
            AND a.id NOT IN
            <foreach item="item" collection="excludes" separator="," open="(" close=")" index="">'${item}'</foreach>
        </if>
        ORDER BY a.create_time DESC
    </select>

    <!-- 获取指定题库、题型和知识点的题目（用于知识点筛选） -->
    <select id="listByTypeAndKnowledgePoints" resultMap="BaseResultMap">
        SELECT a.*
        FROM el_qu a
        LEFT JOIN el_qu_repo b ON a.id=b.qu_id
        WHERE b.repo_id=#{repoId} AND a.qu_type=#{quType}
        <if test="excludes!=null and excludes.size()>0">
            AND a.id NOT IN
            <foreach item="item" collection="excludes" separator="," open="(" close=")" index="">'${item}'</foreach>
        </if>
        <if test="selectedKnowledgePoints!=null and selectedKnowledgePoints.size()>0">
            AND a.knowledge_points IS NOT NULL
            AND a.knowledge_points != ''
            AND a.knowledge_points != '[]'
            AND (
                <foreach item="knowledgePoint" collection="selectedKnowledgePoints" separator=" OR " index="">
                    a.knowledge_points LIKE CONCAT('%"', #{knowledgePoint}, '"%')
                </foreach>
            )
        </if>
        ORDER BY a.create_time DESC
    </select>

    <resultMap id="ExportResultMap" type="com.yf.exam.modules.qu.dto.export.QuExportDTO">
        <id column="q_id" property="qId"  />
        <result column="qu_type" property="quType"  />
        <result column="q_content" property="qContent"  />
        <result column="q_analysis" property="qAnalysis"  />
        <result column="a_is_right" property="aIsRight"  />
        <result column="a_content" property="aContent"  />
        <result column="a_analysis" property="aAnalysis"  />
        <collection property="repoList" column="q_id" select="selectRepos"/>
    </resultMap>

    <select id="selectRepos" resultType="String">
		SELECT repo_id FROM el_qu_repo po WHERE po.qu_id=#{qId}
	</select>


    <sql id="query">
        <where>
            <if test="query!=null">
                <if test="query.quType!=null">
                    AND q.qu_type = #{query.quType}
                </if>
                <if test="query.repoIds!=null and query.repoIds.size()>0">
                    AND po.repo_id IN
                    <foreach collection="query.repoIds" open="(" close=")" separator="," item="repoId">#{repoId}</foreach>
                </if>
                <if test="query.content!=null and query.content!=''">
                    AND q.content LIKE CONCAT('%',#{query.content},'%')
                </if>
                <if test="query.knowledgePoint!=null and query.knowledgePoint!=''">
                    AND q.knowledge_points LIKE CONCAT('%',#{query.knowledgePoint},'%')
                </if>
                <if test="query.subject!=null and query.subject!=''">
                    AND q.subject = #{query.subject}
                </if>
                <if test="query.grade!=null and query.grade!=''">
                    AND q.grade = #{query.grade}
                </if>
                <if test="query.excludes!=null and query.excludes.size()>0">
                    AND q.id NOT IN
                    <foreach collection="query.excludes" open="(" close=")" separator="," item="quId">
                    #{quId}
                    </foreach>
                </if>
            </if>
        </where>
    </sql>

    <select id="paging" resultMap="BaseResultMap">
        SELECT q.id, q.qu_type, q.level, q.image, q.content, 
               q.question_stem, q.knowledge_points, q.extraction_status,
               q.subject, q.grade,
               q.create_time, q.update_time, q.remark, q.analysis
        FROM el_qu q
        LEFT JOIN el_qu_repo po ON q.id=po.qu_id
        <include refid="query" />
        GROUP BY q.id ORDER BY q.update_time DESC
    </select>


    <select id="listForExport" resultMap="ExportResultMap">
        SELECT
        q.id as q_id,
        q.qu_type,
        q.content AS q_content,
        q.analysis as q_analysis,
        a.content as a_content,
        a.is_right as a_is_right,
        a.analysis as a_analysis
        FROM el_qu q
        LEFT JOIN el_qu_answer a ON q.id=a.qu_id
        LEFT JOIN el_qu_repo po ON q.id=po.qu_id
        <include refid="query" />
        GROUP BY a.id ORDER BY q.id
        LIMIT 10000
    </select>

    <!-- 获取指定题库中所有题目的知识点 -->
    <select id="getKnowledgePointsByRepo" resultType="String">
        SELECT DISTINCT q.knowledge_points
        FROM el_qu q
        LEFT JOIN el_qu_repo r ON q.id = r.qu_id
        WHERE r.repo_id = #{repoId}
        AND q.knowledge_points IS NOT NULL
        AND q.knowledge_points != ''
        AND q.knowledge_points != '[]'
    </select>

    <!-- 获取指定题库和题型的知识点 -->
    <select id="getKnowledgePointsByRepoAndType" resultType="String">
        SELECT DISTINCT q.knowledge_points
        FROM el_qu q
        LEFT JOIN el_qu_repo r ON q.id = r.qu_id
        WHERE r.repo_id = #{repoId}
        AND q.qu_type = #{quType}
        AND q.knowledge_points IS NOT NULL
        AND q.knowledge_points != ''
        AND q.knowledge_points != '[]'
    </select>

</mapper>
